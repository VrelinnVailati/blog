---
import "../styles/global.css";

type Props = {
  tabTitle: string;
  pageTitle: string;
  pageSubtitle: string;
  centerTitle: boolean;
};

const { tabTitle, pageTitle, pageSubtitle, centerTitle = false } = Astro.props;

const titleClasses = centerTitle
  ? ["font-big-title", "text-6xl", "text-center"]
  : ["font-big-title", "text-6xl", "text-left"];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{tabTitle}</title>
  </head>

  <body>
    <div class="container mx-auto">
      <slot name="header" />

      <div class="mb-3 mt-2">
        <h1 class={titleClasses.join(" ")}>
          {pageTitle}
        </h1>
        <h3 class="text-lg ml-10">{pageSubtitle}</h3>
      </div>

      <slot />
    </div>
  </body>
</html>
